<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TorchAutoBuild.UI.SimpleDialog"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Сообщение">

	<StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
		<TextBlock Name="MessageTextBlock" TextWrapping="Wrap" Text="Сообщение здесь" HorizontalAlignment="Center" />
		<Button Width="80" HorizontalAlignment="Center" Click="OkButton_Click">OK</Button>
	</StackPanel>

</Window>
